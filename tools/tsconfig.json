{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noEmitHelpers": true,
      "noImplicitUseStrict": true,
      "declaration": false,
      "removeComments": false,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "lib": [
        "es2017",
        "dom"
      ],
      "baseUrl": ".",
      "paths": {
        "~/*": [
          "app/*"
        ],
        "*": [
          "./node_modules/tns-core-modules/*",
          "./node_modules/*"
        ]
      }
    },
    "include": [
      "references.d.ts",
      "app/main.ts",
      "app/**/*.module.ts"
    ]
  }
  